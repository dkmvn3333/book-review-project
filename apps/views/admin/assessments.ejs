<%- include layouts/top-left%>
<!--end top-left--> 

<div class="main-panel">

<!--nav bar-->
<%- include layouts/nav-bar%>
<!--nav bar-->


<div class="content">
        <div class="container-fluid">
            <div class="row">
                    <div class="col-md-12">
                            <div class="col-md-6" align="left">
                                    <a class="btn icon-btn btn-success" href="#"><span class="glyphicon btn-glyphicon ti-plus img-circle text-success"></span>Add</a>
                            </div>
                            <div class="input-group col-md-6">
                                    <div class="input-group-btn search-panel">
                                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                            <span id="search_concept">Filter by</span> <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu" role="menu">
                                          <li><a href="#contains">Contains</a></li>
                                          <li><a href="#its_equal">It's equal</a></li>
                                          <li><a href="#greather_than">Greather than ></a></li>
                                          <li><a href="#less_than">Less than < </a></li>
                                          <li class="divider"></li>
                                          <li><a href="#all">Anything</a></li>
                                        </ul>
                                    </div>
                                    <input type="hidden" name="search_param" value="all" id="search_param">         
                                    <input type="text" class="form-control" name="x" placeholder="Search term...">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button"><span class="ti-search"></span></button>
                                    </span>
                                </div>
                    </div>
                
                <div class="col-md-12">
                    <div class="card">
                        <div class="header">
                            <h4 class="title">Staffs Table</h4>
                            <div class="row">
                                    <div class="col-md-12">
                                            <div class="col-md-12" align="left">
                                                    <button class="btn btn-default filter-button" data-filter="all">All</button>
                                                    <button class="btn btn-default filter-button" data-filter="hdpe">Đã duyệt</button>
                                                    <button class="btn btn-default filter-button" data-filter="sprinkle">Chưa duyệt</button>
                                                    <button class="btn btn-default filter-button" data-filter="spray">Chặn</button>
                                            </div>
                                    </div>
                            </div>
                            
                        </div>
                        <div class="content table-responsive table-full-width">
                            <table class="table table-striped table-bordred">
                                <thead>
                                    <th>ID</th>
                                    <th>Tên sách</th>
                                    <th>Title</th>
                                    <th>Người đăng</th>
                                    <th>Đánh giá</th>
                                    <th>Trạng thái</th>
                                </thead>
                                <tbody>
                                        <% if(data && data.assessments){%>
                                            <%data.assessments.forEach(function(item){%>
                                    <tr>
                                        <td><%= item.book_review_id%></td>
                                        <td><%= item.name_book%> </td>
                                        <td><%= item.title%></td>
                                        <td><%= item.user_id%></td>
                                        <td><%= item.rate%></td>
                                        <td>
                                            <%if(item.book_id!=0){%>
                                                <div class="material-switch">
                                                    <input class="checkbox_btn" id="checkbox<%= item.book_review_id%>" assessment_id="<%= item.book_review_id%>" name="someSwitchOption001" type="checkbox" <% if(item.status!=0){%>checked <%} %> value="<%= item.status%>"/>
                                                    <label for="checkbox<%= item.book_review_id%>" class="label-success"></label>
                                                </div>
                                            <%}%>
                                            <%if(item.book_id==0){%><a href="/admin/books/add/<%= item.book_review_id%>"><button class="creat_btn" style="margin-left:5px;" class="orange" assessment_id="<%= item.book_review_id%>">Create Book!</button></a> <%}%>
                                        </td>    
                                    </tr>
                                    <%})%>
                                    <%}%>
                                </tbody>
                            </table>

                        </div>
                        <ul class="pagination" >
                            <li class="disabled"><a href="#">«</a></li>
                            <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li><a href="#">»</a></li>
                        </ul>

                    </div>
                </div>

            </div>
        </div>
        
    </div>

        <script type="text/javascript" src="/static_admin/assets/js/assessment.js"></script>
        
		<!--footer-->
        <%- include layouts/footer%>