	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<title>Book review admin</title>

	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <link href="/static_admin/assets/css/style.css" rel="stylesheet" />
    <!-- Bootstrap core CSS     -->
    <link href="/static_admin/assets/css/bootstrap.min.css" rel="stylesheet" />


    <!-- Animation library for notifications   -->
    <link href="/static_admin/assets/css/animate.min.css" rel="stylesheet"/>

    <!--  Paper Dashboard core CSS    -->
