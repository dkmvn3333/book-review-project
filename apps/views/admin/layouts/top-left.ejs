<body>

<div class="wrapper">
    <div class="sidebar" data-background-color="white" data-active-color="danger">

    <!--
		Tip 1: you can change the color of the sidebar's background using: data-background-color="white | black"
		Tip 2: you can change the color of the active button using the data-active-color="primary | info | success | warning | danger"
	-->

    	<div class="sidebar-wrapper">
            <div class="logo">
                <a href="http://www.creative-tim.com" class="simple-text">
                    Phúc Văn Minh
                </a>
            </div>
            <% 
                var dashboard ="";
                var profile ="";
                var users ="";
                var staffs ="";
                var roles ="";
                var books ="";
                var categories ="";
                var authors ="";
                var translators ="";
                var assessments ="";
                var comments ="";
                if(active){
                    switch(active){
                        case "profile":{
                            profile="active";
                            break;
                        }
                        case "users":{
                            users="active";
                            break;
                        }
                        case "staffs":{
                            staffs="active";
                            break;
                        }
                        case "roles":{
                            roles="active";
                            break;
                        }
                        case "books":{
                            books="active";
                            break;
                        }
                        case "categories":{
                            categories="active";
                            break;
                        }
                        case "authors":{
                            authors="active";
                            break;
                        }
                        case "translators":{
                            translators="active";
                            break;
                        }
                        case "assessments":{
                            assessments="active";
                            break;
                        }
                        case "comments":{
                            comments="active";
                            break;
                        }
                        default:
                        {
                            dashboard="active";
                        }
                    }
                }
            %>
            <ul class="nav">
                <li class="<%=dashboard%>">
                    <a href="/admin">
                        <i class="ti-panel"></i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li class="<%=profile%>">
                    <a href="/admin/profile">
                        <i class="ti-user"></i>
                        <p>User Profile</p>
                    </a>
                </li>
                <hr>
                <li class="<%=staffs%>">
                    <a href="/admin/staffs">
                        <i class="ti-face-smile"></i>
                        <p>Manage Staffs</p>
                    </a>
                </li>
                <li class="<%=users%>">
                    <a href="/admin/users">
                        <i class="ti-receipt"></i>
                        <p>Manage Users</p>
                    </a>
                </li>
                <li class="<%=roles%>">
                    <a href="/admin/roles">
                        <i class="ti-pencil-alt2"></i>
                        <p>Manager Roles</p>
                    </a>
                </li>
                <hr>
                <li class="<%=books%>">
                    <a href="/admin/books">
                        <i class="ti-book"></i>
                        <p>Manage Books</p>
                    </a>
                </li>
                <li class="<%=categories%>">
                    <a href="/admin/categories">
                        <i class="ti-tag"></i>
                        <p>Manage Categories</p>
                    </a>
                </li>
				<li class="<%=authors%>">
                    <a href="/admin/authors">
                        <i class="ti-id-badge"></i>
                        <p>Manage Authors</p>
                    </a>
                </li>
                <li class="<%=translators%>">
                    <a href="/admin/translators">
                        <i class="ti-microphone"></i>
                        <p>Manage Translator</p>
                    </a>
                </li>
                <hr>
                <li class="<%=assessments%>">
                    <a href="/admin/assessments">
                        <i class="ti-pencil-alt"></i>
                        <p>Manage Assessment form</p>
                    </a>
                </li>
                <li class="<%=comments%>">
                    <a href="/admin/comments">
                        <i class="ti-comments-smiley"></i>
                        <p>Manage Comment</p>
                    </a>
                </li>
            </ul>
    	</div>
    </div>